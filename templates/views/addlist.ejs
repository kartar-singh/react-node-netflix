            <form action="/addlist" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="text"  name="moviename"  class="form-control"  aria-describedby="emailHelp" placeholder="Movie name">
                <small id="" class="form-text text-muted">moviename.</small>
              </div>
              <div class="form-group">
                <label for="category">category</label>
                <% var data  = JSON.parse(select) %>
                <select class="form-select" name="category" aria-label="Default select example">
                <% for(var i=0;  i < data.length; i++) { %>
                  <option value="<%= data[i].category %>"><%= data[i].category %></option>
                  <% } %>
                </select>
               </div>
              <div class="form-group">
                <label for="description">description</label>
                <input type="textarea" class="form-control" name="description" id="" placeholder="category">
              </div>
              <div class="form-group">
                <label for="description">Rating</label>
                <input type="textarea" class="form-control" name="rating" id="" placeholder="category">
              </div>

              <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Status</label>
              </div>
              <div class="from-group" >
               <input type="file" name="uploaded_file" id="">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
    </div>
